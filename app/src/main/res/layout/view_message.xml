<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline"
        app:layout_constraintGuide_percent=".02"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline"
        app:layout_constraintGuide_percent=".98"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_one_guideline"
        app:layout_constraintGuide_percent=".85"
        android:orientation="vertical"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_guideline1"
                app:layout_constraintGuide_percent=".02"
                android:orientation="vertical"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_guideline1"
                app:layout_constraintGuide_percent=".98"
                android:orientation="vertical"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_guideline1"
                app:layout_constraintGuide_percent=".02"
                android:orientation="horizontal"/>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/sr_messages"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@+id/top_guideline1"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline1"
                app:layout_constraintRight_toRightOf="@+id/right_guideline1">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v4.widget.SwipeRefreshLayout>

        </android.support.constraint.ConstraintLayout>


    </ScrollView>

    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/et_send"
        android:inputType="textMultiLine"
        android:paddingStart="@dimen/padding_left"
        android:paddingEnd="@dimen/padding_right"
        android:hint="@string/hint_message"
        android:background="@drawable/rounded_border"
        android:textColor="@android:color/white"
        tools:ignore="Autofill"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_one_guideline"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/et_send"
        android:layout_marginStart="3dp"
        android:id="@+id/ib_send"
        android:src="@drawable/ic_send"
        android:background="@null"
        android:contentDescription="@string/lbl_description_image"
        app:layout_constraintLeft_toLeftOf="@+id/right_one_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>



